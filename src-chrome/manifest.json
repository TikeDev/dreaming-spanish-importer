{
  "manifest_version": 3,
  "name": "Dreaming Spanish Importer Plus",
  "version": "1.0.0",
  "description": "Automatically add watch/listening history to Dreaming Spanish from a file, Youtube, or Spotify.",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://open.spotify.com/*",
        "https://www.open.spotify.com/*",
        "https://spotify.com/*",
        "https://www.spotify.com/*",
        "https://www.youtube.com/*", 
        "https://youtube.com/*"],
      "js": ["yt-button-injector.js"]
    },
    {
      "matches": [
        "https://www.dreamingspanish.com/*",
        "https://dreamingspanish.com/*"
      ],
      "js": ["ds-time-adder.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["add_icon.jpeg","dreamingplus.png"],
      "matches": ["https://www.youtube.com/*","https://open.spotify.com/*","https://spotify.com/*"]
    }
  ],
  "action": {}
}
